{% extends "layout.njk" %}
{% from "./component.njk" import search_input %}
{% from "./../format.njk" import format %}

{% set css_deps = ['fonts','helpers', 'components/menu', 'components/popover','components/button','components/input-group', 'icons', 'components/token'] %}

{% block content %}
    <h1>search-input</h1>
    {% set basic_search %}
        {{ search_input(properties=data.properties) }}
    {% endset %}

    {{ format(basic_search) }}

    <h1>search-input collapsable</h1>
    {% set basic_search_collapsable %}
        <div style="padding-left: 300px;">
        {{ search_input(
                properties={
                    value: data.properties.value,
                    placeholder: data.properties.placeholder,
                    collapsable: true,
                    collapsed: false,
                    items: data.properties.items
                }
            )
        }}
        </div>
    {% endset %}
    {{ format(basic_search_collapsable) }}

    <h1>search-input collapsable - collapsed</h1>
    {% set basic_search_collapsed %}
        {{ search_input(
                properties={
                    value: data.properties.value,
                    placeholder: data.properties.placeholder,
                    collapsable: true,
                    collapsed: true,
                    items: data.properties.items
                }
            )
        }}
    {% endset %}

    {{ format(basic_search_collapsed) }}
{% endblock %}
